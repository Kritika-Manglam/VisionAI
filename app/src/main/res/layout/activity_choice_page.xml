<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".choicePage">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="51dp"
        android:gravity="center"
        android:text="VisionAI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView3"
        android:rowCount="5"
        android:columnCount="1"

        android:background="@color/dark_blue"
        android:paddingVertical="30dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="48dp"
            android:background="@color/dark_blue"
            android:layout_margin="18dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/b3"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@drawable/btn_gallery"
                    android:backgroundTint="@color/white"
                    android:text="Language\nDetector"
                    android:drawableStart="@drawable/identify"
                    android:textAlignment="center"
                    android:textColorLink="#F7FFFFFF" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/dark_blue"
            app:cardCornerRadius="48dp"
            android:layout_margin="18dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/b4"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/imgtotext"
                    android:text="Image \n To text"
                    android:textAlignment="center"
                    android:textColorLink="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="48dp"
            android:background="@color/dark_blue"
            android:layout_margin="18dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/b5"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/replybot"
                    android:text="Smart\nReply\n Bot"
                    android:textAlignment="center"
                    android:textColorLink="#F7FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/dark_blue"
            app:cardCornerRadius="48dp"
            android:layout_margin="18dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/light_blue"
                app:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/b1"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:drawableStart="@drawable/objdet"
                    android:backgroundTint="@color/white"
                    android:text=" \n Object \n Detection"
                    android:textAlignment="center"
                    android:textColorLink="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="4"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="48dp"
            android:background="@color/dark_blue"
            android:layout_margin="18dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/b2"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/pose"
                    android:text="Pose \n Detection"
                    android:textAlignment="center"
                    android:textColorLink="#F7FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </GridLayout>

    </RelativeLayout>

